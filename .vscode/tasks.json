{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "1. Build Project",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "-v",
                "${workspaceFolder}:/student",
                "ghcr.io/kongkrit/baremetal-c",
                "make",
                "-C",
                "/student/code",
                "DIR='${fileDirname}'",
                "RECURSE=0"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                {
                    "owner": "sdcc-core",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "pattern": {
                        "regexp": "^([^:]+):(\\d+):\\s*(?:(warning|error)\\s*\\d+:\\s*)?(.*?)(?:;\\s*column\\s*(\\d+))?$",
                        "file": 1,
                        "line": 2,
                        "severity": 3,
                        "message": 4,
                        "column": 5
                    }
                },
                {
                    "owner": "sdcc-cpp",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "pattern": {
                        "regexp": "^([^:]+):(\\d+):(\\d+):\\s*(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "message": 4
                    }
                },
                {
                    "owner": "sdcc-asm",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "pattern": {
                        "regexp": "^([^:]+\\.asm):(\\d+):\\s*Error:\\s*(.*)$",
                        "file": 1,
                        "line": 2,
                        "message": 3
                    }
                }
            ],
            "detail": "Compiles and link code."
        },
        {
            "label": "2. Build All Projects",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "-v",
                "${workspaceFolder}:/student",
                "ghcr.io/kongkrit/baremetal-c",
                "make",
                "-C",
                "/student/code"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Build all projects in 'code' and its subfolders."
        },
        {
            "label": "3. Clean All Projects",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "-v",
                "${workspaceFolder}:/student",
                "ghcr.io/kongkrit/baremetal-c",
                "make",
                "-C",
                "/student/code",
                "clean"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Removes all build artifacts."
        }
    ]
}
